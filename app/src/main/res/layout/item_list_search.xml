<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cView"
    android:layout_width="371dp"
    android:layout_height="256dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectangle_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_fontlist_item_search">

        <TextView
            android:id="@+id/Prof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:text="Экономист"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="9dp"
            android:text="40 000 - 60 000 руб"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/Prof"
            app:layout_constraintTop_toBottomOf="@+id/Prof" />

        <TextView
            android:id="@+id/Firma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ЭконоМикс"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/Prof"
            app:layout_constraintTop_toBottomOf="@+id/Sum" />

        <TextView
            android:id="@+id/Source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:text="Без опыта"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/Firma"
            app:layout_constraintTop_toBottomOf="@+id/Firma" />

        <TextView
            android:id="@+id/Education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Экономическое образование"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/Source"
            app:layout_constraintTop_toBottomOf="@+id/Source" />

        <Button
            android:id="@+id/idButtonClick"
            android:layout_width="321dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@drawable/button_text_color_search_page"
            android:text="Откликнуться"
            android:textColor="@drawable/button_text_color_search"
            android:textSize="16sp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Education" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>